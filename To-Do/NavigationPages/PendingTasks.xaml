                        <TextBlock Text="Created 31 months ago" Foreground="{ThemeResource SystemBaseMediumHighColor}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                        <Button Click="DeleteTask" ToolTipService.ToolTip="Delete task" CornerRadius="0" Height="40" Width="40" Grid.Column="2">
                            <FontIcon Foreground="{ThemeResource SystemControlErrorTextForegroundBrush}" FontSize="17" Glyph="&#xE74D;"/>
                        </Button>
                    </Grid>
                </Grid>
            </SplitView.Pane>
        </SplitView>
        <Grid x:Name="notif" Opacity="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10,10,10,95" Grid.RowSpan="2" Translation="0,170,0">
            <Grid.TranslationTransition>
                <Vector3Transition Duration="0:0:0.2"/>
            </Grid.TranslationTransition>
            <Grid.OpacityTransition>
                <ScalarTransition/>
            </Grid.OpacityTransition>
            <Border Background="Transparent" BorderBrush="{ThemeResource SystemBaseHighColor}" Opacity="0.3" BorderThickness="3" CornerRadius="{ThemeResource ControlCornerRadius}"/>
            <controls:InfoBar CornerRadius="{ThemeResource ControlCornerRadius}" IsClosable="False" IsOpen="True" Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}" Severity="Informational" Message="Marked task as complete." x:Name="confirmDoneNotif">

                <controls:InfoBar.ActionButton>
                    <Button Click="UndoDelete" HorizontalAlignment="Right" Margin="50,0,0,0" Content="Undo" Style="{ThemeResource AccentButtonStyle}"/>
                </controls:InfoBar.ActionButton>
            </controls:InfoBar>

        </Grid>
    </Grid>
</Page>
